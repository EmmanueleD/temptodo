{
	"info": {
		"name": "TempTodo Production",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"url": "https://temptodo-production.up.railway.app"
			}
		},
		{
			"name": "Register",
			"request": {
				"method": "POST",
				"url": "https://temptodo-production.up.railway.app/api/auth/register",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
				}
			}
		},
		{
			"name": "Login",
			"request": {
				"method": "POST",
				"url": "https://temptodo-production.up.railway.app/api/auth/login",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
				}
			}
		},
		{
			"name": "Create Todo",
			"request": {
				"method": "POST",
				"url": "https://temptodo-production.up.railway.app/api/todos",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Test todo in production\",\n    \"notifyAt\": \"2024-11-23T16:00:00.000Z\"\n}"
				}
			}
		},
		{
			"name": "Get Todos",
			"request": {
				"method": "GET",
				"url": "https://temptodo-production.up.railway.app/api/todos",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				]
			}
		}
	]
}